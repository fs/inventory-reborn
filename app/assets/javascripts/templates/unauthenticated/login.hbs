<form id="login-form" class="form-horizontal" method="post">
	<fieldset>
		<div class="input-prepend" title="Email">
			<span class="add-on"><i class="halflings-icon user"></i></span>
      <input id="email" name="email" class="input-large span10" type="email" required="required" placeholder="type email"/>
		</div>
		<div class="clearfix"></div>

		<div class="input-prepend" title="Password">
			<span class="add-on"><i class="halflings-icon lock"></i></span>
			<input class="input-large span10" name="password" id="password" type="password" required="required" placeholder="type password"/>
		</div>
		<div class="clearfix"></div>

		<div class="button-login">
			<button type="submit" class="btn btn-primary">Login</button>
		</div>
		<div class="clearfix"></div>
</form>
