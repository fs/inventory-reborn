<div class="modal fade in" id="myModal" aria-hidden="false">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Settings</h3>
  </div>
  <form id="new_unit" accept-charset="UTF-8">
    <input name="utf8" type="hidden" value="✓">
    <input name="authenticity_token" type="hidden" value="">
    <div class="modal-body">
      <div class="control-group">
        <label class='control-label' for='unit_type'>Unit type</label>
        <div class='controls'>
          <input type="text" name="unit_type" id="unit_type">
        </div>
      </div>
      <div class="control-group">
        <label class='control-label' for='inv_id'>Inv id</label>
        <div class='controls'>
          <input type="text" name="inv_id" id="inv_id">
        </div>
      </div>
      <div class="control-group">
        <label class='control-label' for='name'>Name</label>
        <div class='controls'>
          <input type="text" name="name" id="name">
        </div>
      </div>
      <div class="control-group">
        <label class='control-label' for='description'>Description</label>
        <div class='controls'>
          <input type="text" name="description" id="description">
        </div>
      </div>
      <div class="control-group">
        <label class='control-label' for='on_depot'>On depot</label>
        <div class='controls'>
          <input type="text" name="on_depot" id="on_depot">
        </div>
      </div>
      <div class="control-group">
        <label class='control-label' for='out_of_order'>Out of order</label>
        <div class='controls'>
          <input type="text" name="out_of_order" id="out_of_order">
        </div>
      </div>
      <div class="control-group">
        <label class='control-label' for='out_of_order_note'>Out of order note</label>
        <div class='controls'>
          <input type="text" name="out_of_order_note" id="out_of_order_note">
        </div>
      </div>
      <div class="control-group">
        <label class='control-label' for='location_id'>Location id</label>
        <div class='controls'>
          <input type="text" name="location_id" id="location_id">
        </div>
      </div>
      <div class="control-group">
        <label class='control-label' for='user_id'>User id</label>
        <div class='controls'>
          <input type="text" name="user_id" id="user_id">
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <input class="btn btn-primary create" type="submit" value="Create">
    </div>
  </form>
</div>
